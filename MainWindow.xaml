<Window x:Name="mainWindow" x:Class="Registro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registro"
        mc:Ignorable="d"
        Title="Registro" Height="450" Width="500" Background="#FF2D2D30">
    
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <MenuItem Header="_Archivo"></MenuItem>
                <MenuItem Header="_Registro">
                    <MenuItem x:Name="RegistroPersonasMenuItem" Header="_Personas" Click="RegistroPersonasMenuItem_Click"/>
                    <MenuItem x:Name="RegistroInscripcionMenuItem" Header="_Inscripción" Click="RegistroInscripcionMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Consulta">
                    <MenuItem x:Name="ConsultaPersonasMenuItem" Header="_Personas" Click="ConsultaPersonasMenuItem_Click"/>
                    <MenuItem x:Name="ConsultaInscripcionesMenuItem" Header="_Inscripciones" Click="ConsultaInscripcionesMenuItem_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>


    </Grid>
    

   
</Window>
